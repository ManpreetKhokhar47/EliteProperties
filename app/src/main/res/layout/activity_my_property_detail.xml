<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailInformationActivity">


        <ImageView
            android:id="@+id/imgPropM"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvSizePropM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imgPropM"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20sp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="Property Size : " />

        <TextView
            android:id="@+id/tvAddressPropM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvSizePropM"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20sp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="Address : "
            />

        <TextView
            android:id="@+id/tvDescPropM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvAddressPropM"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20sp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="Description : " />

        <TextView
            android:id="@+id/tvAmenitiesPropM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvDescPropM"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20sp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="Amenities : "
            />

        <TextView
            android:id="@+id/tvTypePropM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvAmenitiesPropM"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20sp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="Type : "

            />

        <TextView
            android:id="@+id/tvRentPropM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvTypePropM"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20sp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="Price : "

            />

        <TextView
            android:id="@+id/tvManagedByM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvRentPropM"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20sp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="Managed By : "

            />

        <TextView
            android:id="@+id/tvViewBroker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@id/tvManagedByM"
            app:layout_constraintLeft_toRightOf="@id/tvManagedByM"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20sp"
            android:textColor="@color/red"
            android:textSize="16dp"
            android:text="View Broker"

            />

        <android.widget.Button
            android:id="@+id/btnUpdateDetailsM"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:layout_constraintTop_toBottomOf="@id/tvManagedByM"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Update Information"
            android:background="@drawable/button_selector"
            android:textColor="@drawable/button_text_color"
            />

        <android.widget.Button
            android:id="@+id/btnAssignBrkM"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:layout_constraintTop_toBottomOf="@id/btnUpdateDetailsM"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Assign Broker"
            android:background="@drawable/button_selector"
            android:textColor="@drawable/button_text_color"
            />

        <android.widget.Button
            android:id="@+id/btnBackM"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:layout_constraintTop_toBottomOf="@id/btnAssignBrkM"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Back"
            android:background="@drawable/button_selector"
            android:textColor="@drawable/button_text_color"
            />

        <TextView
            android:id="@+id/tvempM"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text=""
            app:layout_constraintTop_toBottomOf="@id/btnBackM"
            android:layout_marginTop="10dp"

            />



    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>

