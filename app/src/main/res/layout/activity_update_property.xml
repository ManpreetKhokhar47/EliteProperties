<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editot_absolutey="0dp"
    tools:context=".AddPropertyActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".AddPropertyActivity">


        <EditText
            style="@style/edSignUpStyle"
            android:id="@+id/edLotSizeU"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Lot Size (sq feet)"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/edit_text_design"
            />

        <EditText
            style="@style/edSignUpStyle"
            android:id="@+id/edCoveredAreaU"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Covered Area (sq feet)"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edLotSizeU"
            android:background="@drawable/edit_text_design"
            />



        <EditText
            style="@style/edSignUpStyle"
            android:id="@+id/edBedroomsU"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="No. of Bedrooms"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edCoveredAreaU"
            android:background="@drawable/edit_text_design"
            />

        <EditText
            style="@style/edSignUpStyle"
            android:id="@+id/edBathroomsU"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="No. of Bathrooms"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edBedroomsU"
            android:background="@drawable/edit_text_design"
            />

        <Spinner
            android:id="@+id/edParkingSpacesU"
            style="@style/edSignUpStyle"
            android:background="@drawable/edit_text_design"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edBathroomsU"

            />

        <EditText
            style="@style/edSignUpStyle"
            android:id="@+id/edPriceU"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Price"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edParkingSpacesU"
            android:background="@drawable/edit_text_design"
            />

        <EditText
            style="@style/edSignUpStyle"
            android:id="@+id/edPropAddressU"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Address"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edPriceU"
            android:background="@drawable/edit_text_design"
            />

        <EditText
            android:id="@+id/edDescU"
            style="@style/edSignUpStyle"
            android:background="@drawable/edit_text_design"
            android:ems="10"
            android:hint="Description"
            android:inputType="text|textMultiLine"
            android:layout_height="150dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edPropAddressU" />


        <ImageView
            android:id="@+id/imgPropertyU"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edDescU"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_baseline_image_24"
            style="@style/edSignUpStyle"
            />




        <android.widget.Button
            android:id="@+id/btnUpdateU"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20sp"
            android:textAllCaps="false"
            android:text="Update"
            android:textColor="@drawable/button_text_color"
            android:background="@drawable/button_selector"
            android:layout_width="250dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/imgPropertyU"


            />

        <android.widget.Button
            android:id="@+id/btnCancelU"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20sp"
            android:textAllCaps="false"
            android:text="Cancel"
            android:textColor="@drawable/button_text_color"
            android:background="@drawable/button_selector"
            android:layout_width="250dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/btnUpdateU"


            />

        <TextView
            android:id="@+id/tvempltyU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnCancelU"

            />




    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>


