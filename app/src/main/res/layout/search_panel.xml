<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:background="#7EDCBA66"
        xmlns:app="http://schemas.android.com/apk/res-auto"

    >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="360dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:stretchColumns="*"
            android:elevation="5dp"
            >
            <TableRow

                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvLookingForS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Looking for"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="16sp"


                    />

                <RadioGroup
                    android:id="@+id/rgLookingForS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbBuyS"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Buy"
                        android:checked="true"
                        android:button="@android:color/transparent"
                        android:background="@drawable/radio_selector"
                        android:textColor="@drawable/radio_text_color"
                        android:textAlignment="center"
                        />

                    <RadioButton
                        android:id="@+id/rbRentS"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Rent"
                        android:button="@android:color/transparent"
                        android:background="@drawable/radio_selector"
                        android:textColor="@drawable/radio_text_color"
                        android:textAlignment="center"


                        />
                </RadioGroup>


            </TableRow>

            <TableRow

                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvPropTypeS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Property Type"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="16sp"

                    />

                <RadioGroup
                    android:id="@+id/rgPropTypeS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >

                    <RadioButton
                        android:id="@+id/rbHouseS"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="House"
                        android:checked="true"
                        android:button="@android:color/transparent"
                        android:background="@drawable/radio_selector"
                        android:textColor="@drawable/radio_text_color"
                        android:textAlignment="center"
                        />

                    <RadioButton
                        android:id="@+id/rbBasementS"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Basement"
                        android:button="@android:color/transparent"
                        android:background="@drawable/radio_selector"
                        android:textColor="@drawable/radio_text_color"
                        android:textAlignment="center"
                        />

                    <RadioButton
                        android:id="@+id/rbApartmentS"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Apartment"
                        android:button="@android:color/transparent"
                        android:background="@drawable/radio_selector"
                        android:textColor="@drawable/radio_text_color"
                        android:textAlignment="center"
                        />
                </RadioGroup>

            </TableRow>

            <TableRow

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/tvPriceRangeS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Price Range"
                    android:textColor="@color/black"
                    android:textSize="16sp"

                    />

                <EditText
                    android:id="@+id/edMinPrice"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:hint="Min Range"
                    android:inputType="textPersonName"
                    android:text="" />


            </TableRow>

            <TableRow

                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvPri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=" "
                android:textColor="@color/black"
                android:textSize="16sp"

                />


            <EditText
                android:id="@+id/edMaxPrice"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:hint="Max Range"/>



        </TableRow>

            <TableRow

                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvBedroomsS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bedrooms"
                    android:textColor="@color/black"
                    android:textSize="16sp"

                    />

                <EditText
                    android:id="@+id/edbedCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text=""
                    android:hint="Enter Number"/>

            </TableRow>

            <TableRow

                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvPakingsS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parkings"
                    android:textColor="@color/black"
                    android:textSize="16sp"

                    />

                <EditText
                    android:id="@+id/edParkCountS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text=""
                    android:hint="Enter Number"
                    />

            </TableRow>

            <TableRow

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <androidx.appcompat.widget.AppCompatButton
                    android:background="@drawable/button_selector"
                    android:id="@+id/btnSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:text="Search"
                    android:layout_marginTop="20dp"
                    android:textColor="@drawable/button_text_color"


                    />
            </TableRow>

        </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>