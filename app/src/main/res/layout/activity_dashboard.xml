<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/headerLogo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@drawable/header_logo_white_c"
            app:layout_constraintTop_toTopOf="parent"

            />
        <ImageView
            android:id="@+id/headerBanner"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@drawable/header_image"
            app:layout_constraintTop_toBottomOf="@id/headerLogo"

            />

        <ListView
            android:id="@+id/lvProList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/headerBanner"
            />

        <TextView
            android:id="@+id/tvContactInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact the Elite Properties team"
            app:layout_constraintTop_toBottomOf="@id/lvProList"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:textSize="20dp"
            />

        <android.widget.Button
            android:id="@+id/btnPh"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="30sp"
            android:layout_marginTop="44dp"
            android:background="@drawable/button_selector"
            android:text="+1 (514) 699-7147"
            android:textAllCaps="false"
            android:textColor="@drawable/button_text_color"
            app:layout_constraintTop_toBottomOf="@id/tvContactInfo"
            tools:layout_editor_absoluteX="30dp"
            android:drawableStart="@drawable/ic_phone"
            android:paddingLeft="10dp"
            android:drawablePadding="-20dp"
            />

        <android.widget.Button
            android:id="@+id/btnEm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="30sp"
            android:layout_marginTop="44dp"
            android:background="@drawable/button_selector"
            android:text="admin@elliteproperties.com"
            android:textAllCaps="false"
            android:textColor="@drawable/button_text_color"
            app:layout_constraintTop_toBottomOf="@id/btnPh"
            tools:layout_editor_absoluteX="30dp"
            android:drawableStart="@drawable/ic_email"
            android:paddingLeft="10dp"
            android:drawablePadding="-20dp"
            />

        <TextView
            android:id="@+id/tvCopyRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Elite Properties trade-marks (including design) are owned by Elite Properties Inc., doing business as Elite Properties."
            app:layout_constraintTop_toBottomOf="@id/btnEm"
            android:layout_marginTop="44dp"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />

        <TextView
            android:id="@+id/tvemplty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCopyRight"

            />



    </androidx.constraintlayout.widget.ConstraintLayout>





</ScrollView>